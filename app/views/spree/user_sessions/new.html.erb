<% @body_id = 'login' %>
<div class="col-md-6 <%= request.path == spree.login_path ? "col-md-offset-3" : "" %>">
  <h1>Login</h1>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title"><%= Spree.t(:login_as_existing) %></h2>
    </div>
    <div id="existing-customer" class="panel-body" data-hook="login">
      <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
      <%= render :partial => 'spree/shared/login' %>
      <div>
        <ul>
          <li><%= Spree.t(:or) %>
          <%= link_to Spree.t(:create_a_new_account), spree.signup_path %> |</li>
          <li><%= link_to Spree.t(:forgot_password), spree.recover_password_path %></li>
        </ul>
      </div>
      <div data-hook="login_extras"></div>
    </div>
  </div>
</div>