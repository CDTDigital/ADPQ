        </a>
      </figure>
      <span class="glyphicon glyphicon-menu-hamburger menu" onclick="toggleMenu()"></span>
    </nav>
    <div class="responsive-menu" id="responsive-menu">
      <ul class="nav nav-sidebar <%= "#{active_class('buttons_iconography')}" %>">
