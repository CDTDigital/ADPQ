<script type="text/javascript">
  function toggleMenu() {
    $('#responsive-menu').toggle();
  }
  $(window).resize(function (e) {
    if (e.target.innerWidth >= 768) {
      $('#responsive-menu').css({'display': 'none'});
    }
  });
</script>